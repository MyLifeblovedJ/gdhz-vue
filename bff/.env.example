# BFF 服务
BFF_PORT=3001
BFF_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AionUi 接入
AIONUI_BASE_URL=http://127.0.0.1:25808
# 可选：默认自动根据 AIONUI_BASE_URL 推导
# AIONUI_WS_URL=ws://127.0.0.1:25808
# 可选：显式指定 AionUi 配置文件（不填则自动探测）
# AIONUI_CONFIG_FILE=/root/.config/AionUi/config/aionui-config.txt
# 可选：显式指定 AionUi 源码里的 acpTypes 文件（不填则自动探测）
# AIONUI_ACP_TYPES_FILE=/usr/local/project/dzh/AionUi/src/types/acpTypes.ts
AIONUI_USERNAME=admin
AIONUI_PASSWORD=请填写实际密码

# 默认后端/模型（前端未选择时使用）
AIONUI_DEFAULT_BACKEND=gemini
AIONUI_DEFAULT_MODEL_ID=
AIONUI_DEFAULT_PROVIDER_ID=
AIONUI_ACP_AGENT_NAME=
AIONUI_WORKSPACE=

# create-conversation 的完整 model（最小必填字段）
# 说明：这里用于 conversation.create 的占位 model，正常不需要 API key
AIONUI_MODEL_ID=gdhz-default-model
AIONUI_MODEL_PLATFORM=openai
AIONUI_MODEL_NAME=GDHZ Default Model
AIONUI_MODEL_BASE_URL=https://api.openai.com/v1
AIONUI_MODEL_USE_MODEL=gpt-4o-mini

# 超时与时序
AI_FIRST_CHUNK_TIMEOUT_MS=30000
AI_IDLE_TIMEOUT_MS=15000
AI_TOTAL_TIMEOUT_MS=120000
AI_FINISH_COOLDOWN_MS=300
AI_CREATE_READY_DELAY_MS=700
AI_CREATE_CONVERSATION_TIMEOUT_MS=60000

# 会话持久化与自动回收
# AI_STORE_DIR=/usr/local/project/dzh/gdhz-vue/bff/data
# AI_SESSION_STORE_FILE=/usr/local/project/dzh/gdhz-vue/bff/data/ai-sessions.json
# AI_MESSAGE_STORE_FILE=/usr/local/project/dzh/gdhz-vue/bff/data/ai-messages.json
AI_SESSION_IDLE_RELEASE_MS=1800000
AI_SESSION_RECYCLE_SCAN_INTERVAL_MS=60000
AI_MAX_SESSIONS_PER_USER=50
AI_MAX_MESSAGES_PER_SESSION=200
AI_SESSION_TITLE_MAX_LENGTH=80
